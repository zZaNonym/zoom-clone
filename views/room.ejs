<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="room.style.css" />
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
    <script src="/socket.io/socket.io.js"></script>

    <script src="https://unpkg.com/peerjs@1.3.1/dist/peerjs.min.js"></script>

    <title>Zoom Clone</title>
  </head>
  <script>
    const ROOM_ID = '<%= roomId %>';
    const NICKNAME = '<%= nickname %>';
  </script>
  <body>
    <main class="main open">
      <div class="main__left">
        <div class="main__videos">
          <div id="video-grid"></div>
        </div>
        <div class="main__controls">
          <div class="main__controls__block">
            <div
              class="main__controls__button"
              id="audio-btn"
              onclick="toggleAudio()"
            >
              <i class="fas fa-microphone"></i>
              <span>Mute</span>
            </div>
            <div
              class="main__controls__button"
              id="video-btn"
              onclick="toggleVideo()"
            >
              <i class="fas fa-video"></i>
              <span>Stop Video</span>
            </div>
          </div>
          <div class="main__controls__block">
            <div class="main__controls__button" onclick="securityHandler()">
              <i class="fas fa-shield-alt"></i>
              <span>Security</span>
            </div>
            <div class="main__controls__button" onclick="participantsHandler()">
              <i class="fas fa-user-friends"></i>
              <span>Participants</span>
            </div>
            <div class="main__controls__button" onclick="chatHandler()">
              <i class="fas fa-comment-alt"></i>
              <span>Chat</span>
            </div>
          </div>
          <div class="main__controls__block" onclick="disconnectHandle()">
            <div class="main__controls__button warning">
              <i class="fas fa-sign-out-alt"></i>
              <span class="leave_meeting">Leave Meeting</span>
            </div>
          </div>
        </div>
      </div>
      <div class="main__right">
        <div class="main__header">
          <h2>Chat</h2>
          <i class="fas fa-times close-btn" onclick="chatHandler()"></i>
        </div>
        <div class="main__chat_window" id="chat_window">
          <ul class="messages" id="chat_messages"></ul>
        </div>
        <div class="main__message_container">
          <input
            id="chat_message"
            type="text"
            placeholder="Type message here..."
          />
        </div>
      </div>
    </main>
    <script src="room.script.js"></script>
  </body>
</html>
